<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiDemoDataBinding.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MauiDemoDataBinding.Models">

    <ContentPage.BindingContext>
        <models:Product 
            x:Name ="product"
            Name="iPhone 10"
            Price="5000"
            Stock="5" />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout>

            <Label
                x:Name="lblName"
                FontSize="30"
                HorizontalOptions="Center"
                Text="{Binding Source={x:Reference product}, Path=Name}" />

            <Label
                x:Name="lblPrice"
                FontSize="20"
                HorizontalOptions="Center"
                Text="{Binding Source={x:Reference product}, 
                        Path=Price, 
                        StringFormat='{0:F2} €'}"
                VerticalOptions="Center" />

            <Label
                x:Name="lblStock"
                FontSize="20"
                HorizontalOptions="Center"
                Text="{Binding Source={x:Reference product}, 
                        Path=Stock, 
                        StringFormat='Quantity: {0}'}"
                VerticalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
